// Tree view item actions
export enum TreeViewItemAction {
    none,
    open,
    delete,
    new-folder,
    new-project,
}

// Generic tree view item data structure
export struct TreeViewItemData {
    level: int,  // 0 = top level items
    icon: image,
    text: string,
