import { Palette } from "std-widgets.slint";

export component PackageEditorPanel inherits Rectangle {
    in property <bool> error-state;
    out property <bool> has-hover: ta.has-hover;

    width: self.preferred-width;
    height: self.preferred-height;
    background: Palette.background;
    border-color: error-state ? red : #505050;
    border-width: error-state ? 2px : 1px;
    border-radius: 8px;
    opacity: has-hover ? 1 : 0.8;

    animate opacity { duration: 100ms; }

    ta := TouchArea {
        VerticalLayout {
            padding: 5px;

            @children
        }
    }
}
